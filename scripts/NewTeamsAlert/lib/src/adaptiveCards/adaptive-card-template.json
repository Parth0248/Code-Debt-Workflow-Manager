{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "TextBlock",
            "text": "Urgent Task: Only ${days} days left",
            "wrap": true,
            "weight": "Bolder",
            "size": "Large"
        },
        {
            "type": "TextBlock",
            "text": "${type}: ${title}",
            "wrap": true,
            "weight": "Bolder",
            "size": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "File: [${file}](https://gitlab.com/your-repo/${file})",
            "wrap": true,
            "color": "Accent",
            "tooltip": "Click to open file"
        },
        {
            "type": "TextBlock",
            "text": "${message}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "You have XX tasks left!",
            "wrap": true
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Other pending tasks in this file:",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "- Update unit tests\n- Improve error handling",
                    "wrap": true,
                    "isSubtle": true
                }
            ],
            "bleed": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "data": {
                                        "action": "complete"
                                    },
                                    "title": "Open in VS Code"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
