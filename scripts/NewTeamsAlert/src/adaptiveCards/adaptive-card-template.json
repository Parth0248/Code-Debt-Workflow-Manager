{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Hi <at>${username}</at>",
          "weight": "Bolder",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "Urgent Task: Only ${days} days left",
          "wrap": true,
          "weight": "Bolder",
          "size": "Large"
        },
        {
          "type": "TextBlock",
          "text": "${type}: ${title}",
          "wrap": true,
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "File: ${shortFilePath}",
          "wrap": true,
          "color": "accent",
          "weight": "Bolder",
          "tooltip": "Click to open file"
        },
        {
          "type": "TextBlock",
          "text": "${message}",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "You have ${pendingTasks} tasks left!",
          "wrap": true
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Other pending tasks in this file:",
              "color": "warning",
              "size": "Medium",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${pendingTaskContent}",
              "wrap": true,
              "isSubtle": true
            }
          ],
          "bleed": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "url": "vscode://file/${file}",
                      "title": "Open in VS Code"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "msteams": {
    "width": "Full",
    "entities": [
      {
        "type": "mention",
        "text": "<at>${username}</at>",
        "mentioned": {
          "id": "abc@gmail.com",
          "name": "${username}"
        }
      }
    ]
  }
}
