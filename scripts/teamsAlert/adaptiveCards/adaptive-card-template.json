{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Hi <at>${username}</at>",
          "weight": "Bolder",
          "size": "medium",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "${alertMessage}",
          "weight": "Bolder",
          "size": "large",
          "color": "${alertColor}",
          "wrap": true,
          "spacing": "small"
        },
        {
          "type": "TextBlock",
          "text": "${type}: ${title}",
          "weight": "Bolder",
          "size": "medium",
          "wrap": true,
          "spacing": "small"
        },
        {
          "type": "TextBlock",
          "text": "File: ${shortFilePath}",
          "weight": "Bolder",
          "color": "Accent",
          "size": "small",
          "wrap": true,
          "tooltip": "Click to open file",
          "spacing": "small"
        },
        {
          "type": "TextBlock",
          "text": "${message}",
          "wrap": true,
          "size": "large",
          "spacing": "medium"
        },
        {
          "type": "TextBlock",
          "text": "You have ${pendingTasks} tasks left!",
          "wrap": true,
          "weight": "bolder",
          "size": "medium",
          "spacing": "medium"
        },
        {
          "type": "Container",
          "spacing": "Medium",
          "items": [
            {
              "type": "TextBlock",
              "text": "Other pending tasks:",
              "weight": "bolder",
              "size": "medium",
              "color": "warning",
              "wrap": true,
              "spacing": "small"
            },
            {
              "type": "TextBlock",
              "text": "${pendingTaskContent}",
              "isSubtle": true,
              "wrap": true,
              "spacing": "Small"
            }
          ],
          "bleed": true,
          "style": "emphasis"
        },
        {
          "type": "ColumnSet",
          "spacing": "Medium",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "Open in Editor",
                      "url": "vscode://file/${file}"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "msteams": {
    "width": "Full",
    "entities": [
      {
        "type": "mention",
        "text": "<at>${username}</at>",
        "mentioned": {
          "id": "abhishek.thakur@sprinklr.com",
          "name": "${username}"
        }
      }
    ]
  }
}
