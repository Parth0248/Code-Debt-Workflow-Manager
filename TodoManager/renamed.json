{
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "regexp"
    ],
    "rules": {
      "regexp/no-misleading-todo": [
        "error",
        {
          "pattern": "^\\s*//\\s*TODO:\\s*[a-zA-Z0-9_-]+:\\s*\\d{4}-\\d{2}-\\d{2}:\\s*\\d+:\\s*.*$",
          "message": "TODO comments must follow the format: // TODO: <username>: <current_date>: <days>: <optional_message>"
        }
      ],
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    }
  }
  